category:            Reactive
build-type:          Simple
-- extra-source-files:  
cabal-version:       >=1.10

library
  exposed-modules:     Reactive.DOM.Node
                     , Reactive.DOM.Flow
                     , Reactive.DOM.Window
                     , Reactive.DOM.XHR
                     , Reactive.DOM.Geolocation
                     , Reactive.DOM.Widget

  -- other-modules:       
  other-extensions:    AutoDeriveTypeable
                     , OverloadedStrings
                     , ScopedTypeVariables
                     , TypeFamilies
                     , GADTs
                     , RecursiveDo
                     , RankNTypes

  build-depends:       base >=4.8 && <4.9
                     , transformers >=0.4 && <0.5
                     , containers >=0.5 && <0.6
                     , reactive-banana >=1.0 && <1.1
                     , semigroups >= 0.18 && < 0.19
                     , ghcjs-base
                     , ghcjs-dom
                     , profunctors
                     , bifunctors
                     , async
                     , reactive-sequence
                     , algebraic-data >= 0.1.0.0 && < 0.2.0.0
                     , xss-sanitize >= 0.3.0.0 && < 0.4.0.0
                     , text

  -- hs-source-dirs:      
  default-language:    Haskell2010
